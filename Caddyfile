{
  # Optional but recommended: set an email for ACME account notices
  email admin@lens-cove.com

  # Persist certs in /data (you already mount azure file share there)
  storage file_system /data
}

lens-cove.com, www.lens-cove.com {

  encode gzip

  # Serve uploaded media directly (faster, avoids Django handling files)
  handle_path /media/* {
    root * /srv/media
    file_server
  }

  # Everything else goes to Django/Gunicorn
  reverse_proxy localhost:8000
}
